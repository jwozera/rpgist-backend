{
  "name": "rpgist-backend",
  "version": "0.1.0",
  "description": "Backend service scaffold for RPGist using Node.js 20, TypeScript, Express, and Sequelize.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc --project tsconfig.json && node scripts/export-swagger.js",
    "start": "node dist/server.js",
    "lint": "eslint --ext .ts src",
    "db:create": "sequelize db:create --config sequelize.config.js",
    "db:drop": "sequelize db:drop --config sequelize.config.js",
    "db:migrate": "sequelize db:migrate --config sequelize.config.js",
    "db:migrate:undo": "sequelize db:migrate:undo --config sequelize.config.js",
    "db:seed": "sequelize db:seed:all --config sequelize.config.js",
    "db:seed:undo": "sequelize db:seed:undo:all --config sequelize.config.js"
  },
  "engines": {
    "node": "20.x"
  },
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.18.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.3.3"
  }
}
